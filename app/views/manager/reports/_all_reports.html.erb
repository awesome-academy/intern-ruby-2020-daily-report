<div>
  <h4>
    <%= t ".all_report" %>
    (<span id="num-reports">
      <%= num_of_reports %>
    </span>)
  </h4>
</div>
<%= form_tag manager_reports_path(page: params[:page], date: params[:date], name: params[:name], email: params[:email], status: params[:status]), method: :put, remote: true, id: "checkbox-form" do %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t ".select" %></th>
        <th><%= t ".id" %></th>
        <th><%= t ".name" %></th>
        <th><%= t ".email" %></th>
        <th><%= t ".date_created" %></th>
        <th><%= t ".status" %></th>
        <th><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody id="body-report-table">
      <%= render "report_table", reports: reports %>
    </tbody>
  </table>
  <%= submit_tag t(".checked"), class: "btn btn-link", id: "btn-checked-report" %>
  <%= link_to t(".show_all"), manager_reports_path %>
<% end %>
<%= paginate reports %>
