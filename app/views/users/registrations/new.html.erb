<% provide :title, t(".title") %>

<div class="signup-form">
  <h2>
    <%= t ".register" %>
  </h2>
  <p class="hint-text">
    <%= t ".welcome_register" %>
  </p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t ".characters_minimum" %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit t(".title"), class: "btn btn-success btn-lg btn-block" %>
    </div>
  <% end %>
  <div>
    <p class="text-center">
      <%= t ".or_signin" %>
    </p>
  </div>
  <div class="col-xs-12">
    <%= link_to user_facebook_omniauth_authorize_path do %>
      <div class="col-xs-5 auth auth-facebook pull-left">
         <%= t ".facebook" %>
      </div>
    <% end %>
    <%= link_to user_google_oauth2_omniauth_authorize_path do %>
      <div class="col-xs-5 auth auth-google pull-right">
        <%= t ".google" %>
      </div>
    <% end %>
  </div>
  <div class="text-center">
    <%= render "users/shared/links" %>
  </div>
</div>
