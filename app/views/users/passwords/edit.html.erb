<% provide :title, t(".title") %>

<div class="signup-form">
  <h3 class="text-center auth-title-color">
    <%= t ".title" %>
  </h3>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-group">
      <%= f.label :password, t(".new_password") %><br />
      <% if @minimum_password_length %>
        <em>
          (<%= @minimum_password_length %> <%= t ".characters_minimum" %>)
        </em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, t(".confirm_new_pass") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit t(".submit_btn"), class: "btn btn-success btn-lg btn-block" %>
    </div>
  <% end %>
  <div class="text-center">
    <%= render "users/shared/links" %>
  </div>
</div>
